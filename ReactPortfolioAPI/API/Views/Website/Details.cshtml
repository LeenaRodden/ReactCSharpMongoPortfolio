@model API.Models.WebsiteModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Website</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.WebsiteId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WebsiteId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Url)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisplayName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<fieldset>
    <legend>Technologies</legend>
    <div>
        <ul>
            @foreach (var tech in Model.Technologies)
            {
                <li>@tech.TechnologyName - @tech.TechnologyType</li>
            }
        </ul>
    </div>
</fieldset>
<fieldset>
    <legend>Images</legend>
    <div>
        <ul>
            @foreach (var image in Model.ImageModels)
            {
                <li>@image.Url -  @image.AltText</li>
            }
        </ul>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.WebsiteId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
