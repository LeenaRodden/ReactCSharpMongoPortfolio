
@{
    ViewBag.Title = "Export Data";
}

<h2>Export Data</h2>
<div class="alert alert-info" role="alert">
    Export data to publish portfolio to hosting that does not support ASP.NET/MongoDB
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <span class="text-danger">@ViewBag.errors</span>
    <fieldset>
        <legend>Data To Export</legend>
        <div>
            <input type="checkbox" id="education" name="education"
                   checked>
            <label for="education">Education</label>

            <input type="checkbox" id="Experience" name="experience"
                   checked>
            <label for="experience">Experience</label>

            <input type="checkbox" id="Technology" name="technology"
                   checked>
            <label for="technology">Technology</label>

            <input type="checkbox" id="Website" name="website"
                   checked>
            <label for="website">Website</label>

            <input type="checkbox" id="contactInfo" name="contactInfo"
                   checked>
            <label for="contactInfo">Contact Info</label>

            <input type="checkbox" id="settings" name="settings"
                   checked>
            <label for="settings">Settings</label>
        </div>
    </fieldset>

    <input type="text" id="exportFolder" name="exportFolder"
           value="@ViewBag.exportFolder">
    <label for="exportFolder">Export Folder</label>
    <input type="submit" value="Export" />
}