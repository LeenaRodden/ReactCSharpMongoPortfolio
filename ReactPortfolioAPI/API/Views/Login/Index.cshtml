
@{
    ViewBag.Title = "Index";
}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">Username</div>
            <div class="col-lg-3"><input type="text" name="username" /></div>
        </div>
        <div class="row">
            <div class="col-lg-3">Password</div>
            <div class="col-lg-3"><input type="password" name="password" /></div>
        </div>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-3"><input type="submit" value="Login" /></div>
        </div>
        <div class="row">
            <div class="col-lg-6 text-danger">@ViewBag.errors</div>
        </div>
    </div>
</form>
